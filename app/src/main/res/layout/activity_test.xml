<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" >

    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Run:" />
        <TextView android:id="@+id/runs" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </TableRow>
    
    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Min Errors:" />
        <TextView android:id="@+id/min_errors" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </TableRow>
    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Max Errors:" />
        <TextView android:id="@+id/max_errors" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </TableRow>
    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Av. Errors:" />
        <TextView android:id="@+id/av_errors" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </TableRow>
    
    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Min Hint:" />
        <TextView android:id="@+id/min_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </TableRow>
    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Max Hint:" />
        <TextView android:id="@+id/max_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </TableRow>
    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Av. Hint:" />
        <TextView android:id="@+id/av_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </TableRow>

</TableLayout>
